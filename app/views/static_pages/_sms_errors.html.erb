<% if @sm.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@sm.errors.count, "error") %> prevented
        this user information from being saved:
      </h2>
      <ul>
        <% @sm.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>